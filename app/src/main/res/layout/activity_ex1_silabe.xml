<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/green_background"
    tools:context=".Ex1SilabeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:gravity="center"
            android:text="@string/titlu_ex1_silabe"
            android:textColor="#73B48D"
            android:textSize="23sp"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/imagineView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/cuvantTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="15dp"
            android:text=""
            android:textSize="36sp"
            android:fontFamily="@font/averia_sans_libre_bold"
            android:textColor="#73B48D"
            />

        <GridLayout
            android:id="@+id/gridNumere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/mesajTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="23sp"
            android:gravity="center"
            android:textColor="#73B48D"
            android:fontFamily="@font/andika"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</ScrollView>