<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tourney"
        android:layout_centerHorizontal="true"
        android:paddingStart="20dp"
        android:paddingTop="25dp"
        android:gravity="center"
        android:text="@string/mainMenu_text"
        android:textColor="#73B48D"
        android:textSize="27sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/math_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#73B48D"
            android:padding="10dp"
            android:text="@string/mate_text"
            android:fontFamily="@font/andika"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <Button
            android:id="@+id/romana_btn"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:backgroundTint="#73B48D"
            android:fontFamily="@font/andika"
            android:padding="10dp"
            android:text="@string/romana_text"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </LinearLayout>

</RelativeLayout>