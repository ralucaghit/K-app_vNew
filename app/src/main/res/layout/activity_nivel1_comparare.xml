<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="10dp"
    tools:context=".Nivel1ComparareActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/textTitlu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titlu_comparare1"
            android:textSize="25sp"
            android:textColor="#73B48D"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/imagineStanga"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/textSemn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="36sp"
                android:textColor="#73B48D"
                android:layout_margin="12dp"/>

            <ImageView
                android:id="@+id/imagineDreapta"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonMaiMic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text=""
                android:textSize="24sp"/>

            <Button
                android:id="@+id/buttonEgal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text=""
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/buttonMaiMare"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text=""
                android:textSize="24sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textMaiMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="#73B48D"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textEgal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="#73B48D"/>

        <TextView
            android:id="@+id/textMaiMare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="#73B48D"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/feedbackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#73B48D"
            android:gravity="center"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

</ScrollView>